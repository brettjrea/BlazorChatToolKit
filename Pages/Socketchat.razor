@page "/socketchat"
@using SocketIO.Client
@inject NavigationManager NavigationManager

<h2>Let's Chat!</h2>
<div>Follow these instructions...</div>

<div class="chat-container">
    <div class="input-container">
        <input @bind="InputText" class="input-text" placeholder="Type your message here..." />
        <button @onclick="SendMessage" class="send-button">Send</button>
    </div>

    <div class="output-container">
        <h4>Conversation:</h4>
        <div class="conversation-thread">@foreach (var message in ConversationMessages) { <div class="message @message.Type">@message.Text</div> }</div>
    </div>
</div>

@code {
    private string InputText { get; set; } = string.Empty;
    private List<Message> ConversationMessages { get; set; } = new();
    private SocketIOClient _socket;

    protected override async Task OnInitializedAsync()
    {
        _socket = new SocketIOClient();
        await _socket.ConnectAsync(NavigationManager.ToAbsoluteUri("http://127.0.0.1:5000"));

        _socket.On("ReceiveMessage", response =>
        {
            string message = response.GetValue<string>();
            ConversationMessages.Add(new Message { Type = "bot", Text = message });
            StateHasChanged();
        });
    }

    private async Task SendMessage()
    {
        if (!string.IsNullOrEmpty(InputText))
        {
            ConversationMessages.Add(new Message { Type = "user", Text = InputText });
            await _socket.EmitAsync("SendMessage", InputText);
            InputText = string.Empty;
        }
    }

    public class Message
    {
        public string Type { get; set; }
        public string Text { get; set; }
    }
}
<style>
    .chat-container {
        width: 100%;
        max-width: 600px;
        margin: 0 auto;
    }

    .input-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .input-text {
        flex: 1;
        margin-right: 10px;
        padding: 8px 12px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .send-button {
        background-color: #4CAF50;
        color: white;
        padding: 8px 20px;
        font-size: 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .send-button:hover {
        background-color: #45a049;
    }

    .output-container {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        background-color: #f1f1f1;
    }

    .conversation-thread {
        max-height: 300px;
        overflow-y: auto;
        padding: 10px;
    }

    .message {
        font-size: 16px;
        margin-bottom: 10px;
        word-wrap: break-word;
    }

    .message.user {
        text-align: right;
        color: #004d99;
        font-weight: bold;
    }

    .message.bot {
        text-align: left;
        color: #ff5722;
    }
</style>
